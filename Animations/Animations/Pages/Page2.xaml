<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Animations.Pages.Page2">
    <Grid VerticalOptions="Center" HorizontalOptions="FillAndExpand" Padding="20">

        <Frame x:Name="card" HeightRequest="250"
               BackgroundColor="White"
               HorizontalOptions="FillAndExpand">
            <StackLayout>
                <Image HorizontalOptions="FillAndExpand" 
                       WidthRequest=" 250"
                       Aspect="AspectFill" 
                       Source="https://www.dike.lib.ia.us/images/sample-1.jpg"></Image>
                <Label Text="Card 1 Title Sample"
                       FontAttributes="Bold"/>

                <Button Text="View details"
                        CornerRadius="30"
                        BackgroundColor="Purple"
                        TextColor="White"
                        HorizontalOptions="Center"
                        Clicked="AnimateClicked"></Button>

            </StackLayout>
        </Frame>

        <Frame x:Name="details" HeightRequest="250"
               BackgroundColor="White"
               HorizontalOptions="FillAndExpand"
               IsVisible="False">
            <StackLayout>
                <Label Text="Card 1  Title Sample"
                       FontAttributes="Bold"></Label>
                <Label Text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries"></Label>
                <Button Text="Back"
                        CornerRadius="25"
                        BackgroundColor="Purple"
                        TextColor="White"
                        HorizontalOptions="Center"
                        Clicked="AnimateClicked"></Button>
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>